[push]
  default = simple
  autoSetupRemote = true

[includeIf "gitdir:/Users"]
  path = ~/.gitconfig_macos

[core]
  editor       = vim
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  pager        = less -FXRS -x2

[color]
  branch      = auto
  diff        = auto
  status      = auto
  ui          = auto
  interactive = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = white reverse

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[user]
  name = Zachary Danger Campbell
  email = zacharydanger@fastmail.com

[fetch]
  all = true
  prune = true

[rerere]
  enabled = true

[github]
  user  = zacharydanger
  email = zacharydanger@fastmail.com

[apply]
  whitespace = nowarn

[branch]
  autosetupmerge = true

[rebase]
  autosquash = true

[filter "media"]
  clean  = git-media-clean %f
  smudge = git-media-smudge %f

[filter "lfs"]
  clean    = git-lfs clean -- %f
  smudge   = git-lfs smudge -- %f
  required = true
  process  = git-lfs filter-process

[alias]
  fap  = fetch --all --prune
  fom  = fetch origin master:master
  fum  = fetch upstream master:master
  fuss = fetch upstream staging:staging
  brm  = branch --merged
  brrm = branch --remotes --merged
  recent = branch --sort=-committerdate --format=\"%(committerdate:relative)\t\t\t\t\t%(refname:short)\"
  lease = push --force-with-lease

[pull]
  rebase = true

[includeIf "gitdir:~/customink/"]
  path = ~/.gitconfig_customink
[init]
	defaultBranch = main
[diff]
  wsErrorHighlight = all
